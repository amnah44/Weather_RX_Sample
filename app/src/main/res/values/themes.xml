<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherSample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- style of Linear that include search box and button for do a search -->
    <style name="theme_linear">
        <item name="android:background">@drawable/weather_card_shape</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_small_3</item>
        <item name="android:layout_marginTop">@dimen/margin_small_3</item>
        <item name="android:paddingTop">@dimen/margin_small_2</item>
        <item name="android:paddingBottom">@dimen/margin_small_2</item>
        <item name="android:layout_marginRight">@dimen/margin_small_3</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/margin_small_2</item>
    </style>
    <!-- style of edit text that include name of city -->
    <style name="theme_search_box">
        <item name="android:background">@drawable/weather_card_shape</item>
        <item name="android:textSize">@dimen/text_size_normal_2</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:maxLength">15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@string/search</item>
    </style>
    <!-- style to make public gravity -->
    <style name="theme_gravity">
        <item name="android:gravity">center</item>
    </style>
    <!-- style of textView -->
    <style name="theme_gravity.theme_text_view1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_normal_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- style of textView that include question to search-->
    <style name="theme_gravity.theme_text_view2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <!-- style of text_max_temp_description -->
    <style name="text_max_temp_description">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_normal_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/city_name_amp_max_temp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    <!-- style of text_max_temp -->
    <style name="text_max_temp">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/margin_small_2</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_normal_2</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>